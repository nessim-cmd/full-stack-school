generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["multiSchema"]
  output          = "../src/generated/prisma-client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  schemas  = ["communication"]
}

model Notification {
  id        Int      @id @default(autoincrement())
  title     String
  message   String
  type      String // INFO, WARNING, SUCCESS, ERROR
  read      Boolean  @default(false)
  userId    String
  userRole  String
  schoolId  String
  link      String?
  createdAt DateTime @default(now())

  @@map("notifications")
  @@schema("communication")
}

model Message {
  id           Int      @id @default(autoincrement())
  content      String
  senderId     String
  senderRole   String
  senderName   String
  receiverId   String
  receiverRole String
  schoolId     String
  read         Boolean  @default(false)
  createdAt    DateTime @default(now())

  @@map("messages")
  @@schema("communication")
}

model Announcement {
  id          Int       @id @default(autoincrement())
  title       String
  content     String
  priority    String    @default("NORMAL") // LOW, NORMAL, HIGH, URGENT
  targetRoles String[] // Array of roles this is visible to
  classId     Int?
  schoolId    String
  authorId    String
  authorName  String
  expiresAt   DateTime?
  createdAt   DateTime  @default(now())

  @@map("announcements")
  @@schema("communication")
}

model EmailTemplate {
  id        Int      @id @default(autoincrement())
  name      String
  subject   String
  body      String
  variables String[]
  schoolId  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([name, schoolId])
  @@map("email_templates")
  @@schema("communication")
}
