generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["multiSchema"]
  output          = "../src/generated/prisma-client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  schemas  = ["users"]
}

// Teacher profile data
model Teacher {
  id          String    @id @default(uuid())
  username    String    @unique
  name        String
  surname     String
  email       String?   @unique
  phone       String?   @unique
  address     String
  img         String?
  bloodType   String
  sex         String
  birthday    DateTime
  schoolId    String
  createdAt   DateTime  @default(now())
  subjects    TeacherSubject[]

  @@map("teachers")
  @@schema("users")
}

model TeacherSubject {
  id        String  @id @default(uuid())
  teacherId String
  subjectId String
  teacher   Teacher @relation(fields: [teacherId], references: [id], onDelete: Cascade)

  @@unique([teacherId, subjectId])
  @@map("teacher_subjects")
  @@schema("users")
}

// Student profile data
model Student {
  id          String    @id @default(uuid())
  username    String    @unique
  name        String
  surname     String
  email       String?   @unique
  phone       String?   @unique
  address     String
  img         String?
  bloodType   String
  sex         String
  birthday    DateTime
  schoolId    String
  gradeId     Int
  classId     Int
  parentId    String?
  createdAt   DateTime  @default(now())
  parent      Parent?   @relation(fields: [parentId], references: [id], onDelete: SetNull)

  @@map("students")
  @@schema("users")
}

// Parent profile data
model Parent {
  id        String    @id @default(uuid())
  username  String    @unique
  name      String
  surname   String
  email     String?   @unique
  phone     String    @unique
  address   String
  schoolId  String
  createdAt DateTime  @default(now())
  students  Student[]

  @@map("parents")
  @@schema("users")
}

// Admin profile data
model Admin {
  id        String   @id @default(uuid())
  username  String   @unique
  name      String?
  email     String?
  schoolId  String
  createdAt DateTime @default(now())

  @@map("admins")
  @@schema("users")
}

// School Manager profile
model SchoolManager {
  id        String   @id @default(uuid())
  email     String   @unique
  name      String
  phone     String?
  avatar    String?
  createdAt DateTime @default(now())

  @@map("school_managers")
  @@schema("users")
}

// Super Admin profile
model SuperAdmin {
  id        String   @id @default(uuid())
  email     String   @unique
  name      String
  phone     String?
  avatar    String?
  createdAt DateTime @default(now())

  @@map("super_admins")
  @@schema("users")
}
