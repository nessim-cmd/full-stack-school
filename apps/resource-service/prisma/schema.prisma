generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["multiSchema"]
  output          = "../src/generated/prisma-client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  schemas  = ["resources"]
}

model Resource {
  id          Int       @id @default(autoincrement())
  title       String
  description String?
  type        String    // FILE, LINK, VIDEO, DOCUMENT
  url         String
  size        Int?
  mimeType    String?
  category    String
  subjectId   Int?
  gradeId     Int?
  classId     Int?
  uploadedBy  String
  uploaderName String
  schoolId    String
  isPublic    Boolean   @default(false)
  downloads   Int       @default(0)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  @@map("resources")
  @@schema("resources")
}

model LibraryBook {
  id            Int       @id @default(autoincrement())
  title         String
  author        String
  isbn          String?
  publisher     String?
  publishYear   Int?
  category      String
  description   String?
  coverImage    String?
  totalCopies   Int       @default(1)
  availableCopies Int     @default(1)
  location      String?
  schoolId      String
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  borrowings    BookBorrowing[]

  @@map("library_books")
  @@schema("resources")
}

model BookBorrowing {
  id          Int       @id @default(autoincrement())
  bookId      Int
  studentId   String
  studentName String
  borrowedAt  DateTime  @default(now())
  dueDate     DateTime
  returnedAt  DateTime?
  status      String    @default("BORROWED") // BORROWED, RETURNED, OVERDUE
  schoolId    String
  book        LibraryBook @relation(fields: [bookId], references: [id])

  @@map("book_borrowings")
  @@schema("resources")
}

model Equipment {
  id          Int       @id @default(autoincrement())
  name        String
  description String?
  category    String
  serialNumber String?
  purchaseDate DateTime?
  condition   String    @default("GOOD") // GOOD, FAIR, POOR, DAMAGED
  location    String?
  assignedTo  String?
  schoolId    String
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  @@map("equipment")
  @@schema("resources")
}
