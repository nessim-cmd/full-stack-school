generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["multiSchema"]
  output          = "../src/generated/prisma-client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  schemas  = ["finance"]
}

model FeeStructure {
  id          Int       @id @default(autoincrement())
  name        String
  amount      Float
  frequency   String    // MONTHLY, QUARTERLY, YEARLY, ONE_TIME
  gradeId     Int?
  schoolId    String
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  payments    Payment[]

  @@map("fee_structures")
  @@schema("finance")
}

model Payment {
  id             Int          @id @default(autoincrement())
  amount         Float
  method         String       // CASH, CARD, BANK_TRANSFER, MOBILE_MONEY
  status         String       // PENDING, COMPLETED, FAILED, REFUNDED
  transactionId  String?      @unique
  studentId      String
  feeStructureId Int?
  schoolId       String
  notes          String?
  paidAt         DateTime?
  createdAt      DateTime     @default(now())
  updatedAt      DateTime     @updatedAt
  feeStructure   FeeStructure? @relation(fields: [feeStructureId], references: [id])

  @@map("payments")
  @@schema("finance")
}

model Invoice {
  id          Int       @id @default(autoincrement())
  invoiceNo   String    @unique
  amount      Float
  dueDate     DateTime
  status      String    // PENDING, PAID, OVERDUE, CANCELLED
  studentId   String
  schoolId    String
  items       Json      // Array of invoice items
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  @@map("invoices")
  @@schema("finance")
}

model Expense {
  id          Int       @id @default(autoincrement())
  title       String
  amount      Float
  category    String
  description String?
  receiptUrl  String?
  schoolId    String
  approvedBy  String?
  status      String    @default("PENDING") // PENDING, APPROVED, REJECTED
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  @@map("expenses")
  @@schema("finance")
}

model Budget {
  id          Int       @id @default(autoincrement())
  name        String
  amount      Float
  spent       Float     @default(0)
  category    String
  startDate   DateTime
  endDate     DateTime
  schoolId    String
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  @@map("budgets")
  @@schema("finance")
}
